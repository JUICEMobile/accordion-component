      display: flex;
      flex-direction: column;
      height: auto;
      min-height: 0;
      margin-top: 10px;

      .circle
        border: 1px solid #FFF;
        border-radius: 20px;
        text-align: center;
        width: 30px;
        height: 30px;
        right: 40px;
        top: 10px;
        position: absolute;
        left: auto;
        padding-bottom: 0px;
        padding-top: 0px;
        font-size: 27px;

      &.slide_selected

        .accordion-info
          display: block;
          height: 0px;
          text-align: center;
          /*display: none;*/
          overflow: visible;
          max-height: 0px;
          transition: max-height 0.5s linear;
          padding: 30px;

          .circle
            display: none;

          &.selected
            max-height: 500px;
            height: auto;
            padding-top: 20px;



        .accordion-title 
          padding: 15px;
          border: 1px solid rgba(255,255,255,0.1);
          border-left: 0;
          width: 100%;
          text-align: left;

          &.hover .circle.close
            background: white;
            color: black;
            margin-top: 0px;

          & > .wrap
            transform: none;
            text-transform: uppercase;
            text-align: left;
            display: block;
            width: 100%;
            font-size: 20px;

          &.selected
            display: block;
            border-bottom: none;

            .wrap
              display: none;

          .circle
            display: block;

            &.close
              position: absolute;
              top: 10px;
              right: 40px;
              left: auto;
              margin-top: 0;
              font-size: 24px;
              padding-left: 0;
              padding-top:1px;

      .accordion-title 
        padding: 3em 15px;
        border: 1px solid #444;
        border-left: 0;
        text-align: center;
        width: 100%;
        height: 33%;
        cursor: pointer;
        color: white;
        position: relative;
        cursor: pointer;
        border-left: none;
        font-size: 22px;

        & > .wrap
          position: absolute;
          top: 15px;
          text-transform: uppercase;

        &.hover > .wrap
          top: 15px;

