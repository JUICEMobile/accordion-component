@keyframes glide-in {
    0% {
      opacity: 0;
      max-width: 0;
    }
  	80% {
     	opacity: 0; 
    }
    100% {
      opacity: 1;
      max-width: 100%;
    }
}

@keyframes glide-out {
    0% {
      opacity: 1;
      max-width: 100%;
    }
  	100% {
      opacity: 0;
      max-width: 0%;
    }
}

.accordion
  display: flex;
  justify-content: flex-start;
  height: 90vh;
  min-height: 500px;
  background-repeat: no-repeat;
  background-size: cover;
  transition: background-image .25s ease-in-out;
  overflow: hidden;
  margin: 30px 30px 0;
  font-family: arial, verdana, sans-serif;

  .invisible
    opacity: 0;
    width: 0px;
    height: 0px;
    border: none;
    padding: 0px !important;
    visibility: hidden;

  .accordion-title
    padding: 3em 15px;
    border: 2px solid rgba(255,255,255,0.1);
    border-left: 0;
    text-align: center;
    cursor: pointer;
    color: white;
    position: relative;
    cursor: pointer;
    flex-grow: 1;
    flex-basis: 0;

    & > .wrap
      text-align: center;
      display: block;
      font-size: 30px;
      position: relative;
      top: 200px;
      transition: top .35s linear;
      text-transform: uppercase;

    &.hover > .wrap
      top: 150px;

  .accordion-content
      height: 100%;
      max-width: 500px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      justify-content: space-around;

  &.slide_selected
      &:last-child
          border-left: 2px solid rgba(255,255,255,0.1);
      
      .accordion-title
        padding: 50px 15px;
        border: 2px solid rgba(255,255,255,0.1);
        border-left: 0;
        width: 35px;
        text-align: left;
        flex-basis: auto;
        flex-grow: 0;

        &.selected
          display: none;

        & > .wrap
          transform: rotate(90deg);
          transform-origin: 30px 5px;
          text-transform: uppercase;
          text-align: center;
          display: inline-block;
          font-size: 30px;
          position: static;

      .accordion-info
        text-align: center;
        flex: 1;
        overflow: hidden;
        width: 0px;
        max-width: 0px;
        position: relative;
        border-right: 2px solid rgba(255,255,255,0.1);

        &.selected
          display: block;
          width: 100%;
          max-width: 100%;
          position: relative;
          overflow: visible;
          padding-top: 0;
          opacity: 1;
          color: white;
          height: 100%;
          animation: glide-in;
          animation-duration: 0.3s;

          .accordion-content
            padding: 0 30px;

        &.shrink
          animation: glide-out;
          animation-duration: 0.3s;


.circle {
    border: 1px solid #FFF;
    border-radius: 35px;
    text-align: center;
    width: 40px;
    height: 40px;
    top: 350px;
    position: absolute;
    left: calc(50% - 20px);
    padding-top: 0px;
    font-size: 37px;
}

.circle.white {
    background: white;
    color: #777;
  opacity: 1;
}

.circle.close {
    position: absolute;
    top: -10px;
    right: 9px;
    margin: 20px auto;
    cursor: pointer;
    z-index: 1;
    font-size: 25px;
    padding-left: 1px;
    left: initial;
    width: 30px;
    height: 30px;
}

.circle.close:hover {
    color: black;
}

.accordion .accordion-title.hover > .circle.white {
  background: black;
  color: white;
}

.accordion.slide_selected .accordion-title .circle {
  display: none;
}

@media screen and (max-width: 1050px)
  .accordion 
    .accordion-title 
      & > .wrap
        font-size: 26px; 


@media screen and (max-width: 940px)
  	.accordion 
      .accordion-title
        & > .wrap
          font-size: 20px; 
    

@media screen and (max-width: 766px)
